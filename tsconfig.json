{
  "compilerOptions": {
    "strictNullChecks": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "rootDir": "src",
    "outDir": "lib",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
  },
  "exclude": [
    "node_modules",
    "lib",
    "es",
  ],
  "include": [
    "./src/*"
  ],
  "compileOnSave": false
}